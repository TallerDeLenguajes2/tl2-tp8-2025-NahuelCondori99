@model PresupuestoDetalles

<h2>Modificar cantidad</h2>

<form method="post">
    <input type="hidden" name="idPresupuesto" value="@ViewBag.IdPresupuesto"/>
    <input type="hidden" name="idProducto" value="@ViewBag.IdProducto"/>

    <p><b>Producto:</b> @Model.Producto.Descripcion</p>
    <p><b>Precio unitario</b>$@Model.Producto.Precio</p>

    <div class="form-group">
        <label>Nueva cantidad</label>
        <input class="form-control" type="number" name="cantidad" value="@Model.Cantidad" min="1"/>
    </div>

    <button class="btn btn-success" type="submit">Guardar cambios</button>

    <a class="btn btn-secondary"
        asp-controller="Presupuestos"
        asp-action="Details"
        asp-route-id="@ViewBag.IdPresupuesto">
        Cancelar
    </a>
</form>