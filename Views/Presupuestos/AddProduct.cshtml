@model List<Productos>

<h2>Agregar productos al presupuesto</h2>

<form method="post">
    <input type="hidden" name="idPresupuesto" value="@ViewBag.IdPresupuesto" />

    <div class="form-group">
        <label>Productos</label>
        <select class="form-control" name="idProducto">
            @foreach(var p in Model)
            {
                <option value="@p.IdProducto">@p.Descripcion ($@p.Precio)</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Cantidad</label>
        <input class="form-control" type="number" name="cantidad" min="1" value="1" />
    </div>

    <button class="btn btn-success" type="submit">Agregar</button>
    <a class="btn btn-secondary" href="/Presupuestos/Details/@ViewBag.IdPresupuesto">Cancelar</a>
</form>